---
import Nav from "../components/Nav.tsx";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta
            name="description"
            content="Digial Artist Services, accessible for everyone."
        />
        <meta title={title} />

        <title>{title}</title>
    </head>
    <body>
        <main>
            <Nav client:load />
            <slot />
        </main>
    </body>
</html>
